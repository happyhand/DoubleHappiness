<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

    <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
    <variable name="myvar" value="myvalue" />

    <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
    <targets>

        <!--
    add your targets here
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    -->

        <!--
    Write events to a file with the date in the filename.
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${message}" />
    -->

        <target xsi:type="File"
             name="system"
             encoding="utf-8"
             layout="${date:universalTime=true:format=yyyy-MM-dd HH\:mm\:ss.fff} ${threadid} [${uppercase:${level}}]【${logger}】｜${message} ${exception:format=tostring}"
             fileName="C:\6s\Mine\DoubleHappiness\Log\GoBike\DataInfo\System\${level}[${date:format=yyyyMMdd-HH}].log"
             maxArchiveFiles="720" />

        <target xsi:type="File"
            name="api"
            encoding="utf-8"
            layout="${date:universalTime=true:format=yyyy-MM-dd HH\:mm\:ss.fff} ${threadid} [${uppercase:${level}}]【${logger}】｜${message} ${exception:format=tostring}"
            fileName="C:\6s\Mine\DoubleHappiness\Log\GoBike\DataInfo\Api\${level}[${date:format=yyyyMMdd-HH}].log"
            maxArchiveFiles="720" />

        <target xsi:type="File"
            name="service"
            encoding="utf-8"
            layout="${date:universalTime=true:format=yyyy-MM-dd HH\:mm\:ss.fff} ${threadid} [${uppercase:${level}}]【${logger}】｜${message} ${exception:format=tostring}"
            fileName="C:\6s\Mine\DoubleHappiness\Log\GoBike\DataInfo\Service\${level}[${date:format=yyyyMMdd-HH}].log"
            maxArchiveFiles="720" />

        <target xsi:type="File"
         name="repository"
         encoding="utf-8"
         layout="${date:universalTime=true:format=yyyy-MM-dd HH\:mm\:ss.fff} ${threadid} [${uppercase:${level}}]【${logger}】｜${message} ${exception:format=tostring}"
         fileName="C:\6s\Mine\DoubleHappiness\Log\GoBike\DataInfo\Repository\${level}[${date:format=yyyyMMdd-HH}].log"
         maxArchiveFiles="720" />
    </targets>

    <rules>
        <!-- add your logging rules here -->

        <!--
    Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"
    <logger name="*" minlevel="Debug" writeTo="f" />
    -->

        <logger name="*Controller" minlevel="Info" writeTo="api" />
        <logger name="*Service" minlevel="Info" writeTo="service" />
        <logger name="*Repository" minlevel="Info" writeTo="repository" />
        <logger name="*" minlevel="Info" writeTo="system" final="true" />
    </rules>
</nlog>